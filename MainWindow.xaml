<Window x:Class="WpfApp1Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Spheres" Height="450" Width="800"

        PreviewMouseWheel="Window_PreviewMouseWheel"
        MouseMove="Window_MouseMove">
    <Grid Background="#212121">
        <Viewport3D Name="viewport" RenderTransformOrigin="0.5,0.5" MouseLeftButtonDown="Viewport_MouseLeftButtonDown">
            
            
            
            <!-- Camera -->
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="camera"
                                   Position="180,120,240"
                                   LookDirection="-180,-120,-240"
                                   UpDirection="0,1,0"
                                   FieldOfView="70"/>
            </Viewport3D.Camera>

            <!-- Light -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <AmbientLight Color="#212121"/>
                        <!-- Soft overall light -->
                        <DirectionalLight Color="White" Direction="1,0,0.1"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>

        <!-- Profile panel (initially hidden) -->
        <Border Name="ProfilePanel" Background="#051938" Visibility="Collapsed" Margin="100" Padding="5">
            <StackPanel>
                <TextBlock Name="ProfileName" FontSize="10" FontWeight="Bold"/>
                <TextBlock Name="ProfileDescription" TextWrapping="Wrap" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
